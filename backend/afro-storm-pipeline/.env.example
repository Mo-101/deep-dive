# AFRO Storm Intelligence Pipeline Configuration
# Copy this file to .env and fill in your API keys

# ===== AI AGENTS =====
# Anthropic Claude (REQUIRED for AI analysis)
ANTHROPIC_API_KEY=

# OpenAI (optional, for embeddings)
OPENAI_API_KEY=

# ===== CLIMATE DATA =====
# FNV3 is public, no key needed
# GraphCast API key (when available)
GRAPHCAST_API_KEY=

# Copernicus Climate Data Store (ERA5 reanalysis)
COPERNICUS_API_KEY=

# ===== HEALTH SURVEILLANCE =====
# WHO API key (if available)
WHO_API_KEY=

# Twitter API (for social media disease signals)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_BEARER_TOKEN=

# ===== DATA STORAGE =====
# Neo4j Knowledge Graph
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=

# PostgreSQL
DATABASE_URL=postgresql://localhost/afrostorm

# Redis
REDIS_URL=redis://localhost:6379

# ===== ALERT SYSTEMS =====
# Slack
SLACK_WEBHOOK_URL=

# Discord
DISCORD_WEBHOOK_URL=

# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Twilio (SMS)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# Email (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# ===== FLAMEBORN DAO =====
FLAMEBORN_API_URL=

# ===== PIPELINE SETTINGS =====
# Run mode: production, development, test
RUN_MODE=development

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
